@page "{id:int}"
@model CikguHub.Pages.Course.IndexModel
@{
    ViewData["Title"] = Model.Course.Code + ": " + Model.Course.Name;
    ViewData["Subtitle"] = Model.Course.Classes.Count() + " classes available";
}

@section Styles
{
    <style>
    </style>
}

@section Scripts
{
    <script>
        jQuery(document).ready(function () {

        });
    </script>

}

<!--begin::Subheader-->
@await Html.PartialAsync("Layouts/Partials/Subheader/_Subheader")
<!--end::Subheader-->

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">

        <div class="row">
            @foreach (Class item in Model.Course.Classes.Where(c => c.Status == ClassStatus.Active))
            {
                <div class="col-xxl-12 col-xl-6">
                    <!--begin::Card-->
                    <div class="card card-custom gutter-b">
                        <!--begin::Card Body-->
                        <div class="card-body d-flex rounded bg-warning p-12 flex-column flex-md-row flex-lg-column flex-xxl-row">
                            <!--begin::Image-->
                            <div class="bgi-no-repeat bgi-position-center bgi-size-cover h-300px h-md-auto h-lg-300px h-xxl-auto mw-100 w-550px" style="background-image: url('@item.ImageUrl')"></div>
                            <!--end::Image-->
                            <!--begin::Card-->
                            <div class="card card-custom w-auto w-md-300px w-lg-auto w-xxl-300px ml-auto">
                                <!--begin::Card Body-->
                                <div class="card-body px-12 py-10">
                                    <h3 class="font-weight-bolder font-size-h2 mb-1">
                                        <a asp-area="" asp-page="/Class/Index" asp-route-id="@item.ClassId" class="text-dark-75">@item.Name</a>
                                    </h3>
                                    <div class="text-primary font-size-h4 mb-9">@item.Tags</div>
                                    <div style="white-space: pre-line" class="font-size-sm mb-8">@item.Description</div>
                                    <!--begin::Info-->
                                    <div class="d-flex mb-3">
                                        <span class="text-dark-50 flex-root font-weight-bold">Course</span>
                                        <span class="text-dark flex-root font-weight-bold">@item.Course.Code: @item.Course.Name</span>
                                    </div>
                                    <div class="d-flex mb-3">
                                        <span class="text-dark-50 flex-root font-weight-bold">Start Time</span>
                                        <span class="text-dark flex-root font-weight-bold">@item.StartTime.ToString("ddd dd MMMM yyyy, hh:mm tt")</span>
                                    </div>
                                    <div class="d-flex mb-3">
                                        <span class="text-dark-50 flex-root font-weight-bold">Duration</span>
                                        <span class="text-dark flex-root font-weight-bold">@item.Duration minutes</span>
                                    </div>
                                    <!--end::Info-->
                                </div>
                                <!--end::Card Body-->
                            </div>
                            <!--end::Card-->
                        </div>
                        <!--end::Card Body-->
                    </div>
                    <!--end:: Card-->
                </div>
            }
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>